---
/**
 * MetaFooter Component
 * Displays build metadata and Gas Town build story
 * Features expandable sections for How It Works, Timeline, and Agent Credits
 */
import profileData from '../../data/profile.json';
import GasTownSection from './GasTownSection';
import { existsSync, readFileSync } from 'fs';
import { join } from 'path';

const { meta } = profileData;

// Build-time injected values via Vite define
const buildTimestamp = import.meta.env.BUILD_TIMESTAMP || meta.buildTimestamp;
const gitCommit = import.meta.env.GIT_COMMIT || 'dev';

// Read cached bundle size from previous build (calculated by Vite plugin)
function getCachedBundleSize(): string {
  try {
    const statsPath = join(process.cwd(), '.build-stats.json');
    if (existsSync(statsPath)) {
      const stats = JSON.parse(readFileSync(statsPath, 'utf-8'));
      if (stats.bundleSize) {
        return stats.bundleSize;
      }
    }
  } catch {
    // Fall back to default
  }
  return meta.bundleSize;
}

const bundleSize = getCachedBundleSize();

// Format the build timestamp for display
const buildDate = new Date(buildTimestamp);
const formattedDate = buildDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});

// Use the actual GitHub repo URL
const sourceUrl = 'https://github.com/pitkanenlauri/deep-vibe-2026';
---

<footer class="meta-footer mt-24 border-t">
  <div class="max-w-4xl mx-auto px-4 py-12">
    <!-- Section Header -->
    <div class="text-center mb-8">
      <h2 class="text-small font-semibold uppercase tracking-wider gas-town-text-muted">
        Built with Gas Town
      </h2>
      <p class="text-small gas-town-text-muted mt-1">
        Multi-agent AI development with transparency
      </p>
    </div>

    <!-- Gas Town Section with Accordions -->
    {meta.gasTown && meta.polecats && meta.timeline && meta.stats && (
      <div class="mb-10">
        <GasTownSection
          client:visible
          gasTown={meta.gasTown}
          polecats={meta.polecats}
          timeline={meta.timeline}
          stats={meta.stats}
        />
      </div>
    )}

    <!-- Build Info & Source -->
    <div class="grid gap-8 md:grid-cols-2 pt-6 border-t meta-footer-border">
      <!-- Build Metadata -->
      <div class="text-center md:text-left">
        <h3 class="text-small font-semibold gas-town-text mb-3">Build Info</h3>
        <dl class="space-y-1 text-small">
          <div class="flex flex-col md:flex-row md:gap-2">
            <dt class="gas-town-text-muted">Last built:</dt>
            <dd class="font-mono gas-town-text">{formattedDate}</dd>
          </div>
          <div class="flex flex-col md:flex-row md:gap-2">
            <dt class="gas-town-text-muted">Bundle:</dt>
            <dd class="font-mono gas-town-text">{bundleSize}</dd>
          </div>
          {gitCommit !== 'dev' && (
            <div class="flex flex-col md:flex-row md:gap-2">
              <dt class="gas-town-text-muted">Commit:</dt>
              <dd class="font-mono gas-town-text">{gitCommit.slice(0, 7)}</dd>
            </div>
          )}
        </dl>
      </div>

      <!-- Source & Links -->
      <div class="text-center md:text-left">
        <h3 class="text-small font-semibold gas-town-text mb-3">Source</h3>
        <div class="space-y-3">
          <a
            href={sourceUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 text-small text-primary-600 hover:text-primary-700 dark:text-blue-400 dark:hover:text-blue-300 transition-colors duration-fast"
          >
            <svg
              class="w-5 h-5"
              fill="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                fill-rule="evenodd"
                d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                clip-rule="evenodd"
              />
            </svg>
            View Source on GitHub
          </a>
          <p class="text-small gas-town-text-muted">
            Open source. Fork it, learn from it, improve it.
          </p>
        </div>
      </div>
    </div>

    <!-- Footer Note -->
    <div class="mt-8 pt-6 border-t meta-footer-border text-center">
      <p class="text-small gas-town-text-muted">
        Built with <a href="https://astro.build" class="text-primary-600 dark:text-blue-400 hover:underline" target="_blank" rel="noopener noreferrer">Astro</a>,
        <a href="https://tailwindcss.com" class="text-primary-600 dark:text-blue-400 hover:underline" target="_blank" rel="noopener noreferrer">Tailwind CSS</a>,
        and <a href="https://github.com/steveyegge/gastown" class="text-primary-600 dark:text-blue-400 hover:underline" target="_blank" rel="noopener noreferrer">Gas Town</a>.
      </p>
    </div>
  </div>
</footer>

<style>
  .meta-footer {
    background-color: rgba(249, 250, 251, 0.5);
    border-color: var(--color-gray-200);
  }

  .meta-footer-border {
    border-color: var(--color-gray-200);
  }

  :global([data-theme="dark"]) .meta-footer {
    background-color: transparent;
    border-color: var(--color-dark-border);
  }

  :global([data-theme="dark"]) .meta-footer-border {
    border-color: var(--color-dark-border);
  }
</style>
