---
interface Props {
  id: string;
  title?: string;
  variant?: 'default' | 'highlight' | 'alternate';
  class?: string;
}

const { id, title, variant = 'default', class: className = '' } = Astro.props;

const variantClasses = {
  default: '',
  highlight: 'bg-white rounded-lg shadow-sm border border-gray-200',
  alternate: 'bg-gray-100',
};
---

<section
  id={id}
  class:list={[
    'scroll-mt-20',
    'py-12 md:py-16 lg:py-20',
    variant === 'highlight' ? 'px-6 md:px-8' : '',
    variantClasses[variant],
    className,
  ]}
>
  {title && (
    <h2 class="text-headline text-gray-900 mb-6 md:mb-8">{title}</h2>
  )}
  <slot />
</section>
