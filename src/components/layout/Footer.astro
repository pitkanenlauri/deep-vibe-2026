---
interface Agent {
  name: string;
  contribution: string;
}

interface Props {
  buildTimestamp: string;
  agents: Agent[];
  bundleSize: string;
  sourceUrl?: string;
}

const { buildTimestamp, agents, bundleSize, sourceUrl } = Astro.props;

const formattedDate = new Date(buildTimestamp).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<footer class="border-t border-gray-200 mt-16">
  <div class="max-w-4xl mx-auto px-4 py-8">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 text-small text-muted">
      <div>
        <p>Built {formattedDate}</p>
        {bundleSize && <p class="mt-1">Bundle: {bundleSize} gzipped</p>}
      </div>

      {agents.length > 0 && (
        <div class="sm:text-right">
          <p class="font-medium text-gray-700">Built with AI Agents</p>
          <ul class="mt-1 space-y-0.5">
            {agents.map((agent) => (
              <li>
                <span class="text-gray-600">{agent.name}</span>
                <span class="text-gray-400"> Â· </span>
                <span class="text-gray-500">{agent.contribution}</span>
              </li>
            ))}
          </ul>
        </div>
      )}
    </div>

    {sourceUrl && (
      <div class="mt-6 pt-4 border-t border-gray-100 text-center">
        <a
          href={sourceUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="link-underline-center text-small"
        >
          View source on GitHub
        </a>
      </div>
    )}
  </div>
</footer>
