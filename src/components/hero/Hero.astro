---
import ImpactDashboard from './ImpactDashboard';
import { HeroTextReveal, HeroItem } from '../animations/AnimatedSection';

interface Props {
  name: string;
  headline: string;
  tagline: string;
  location: string;
  impactStats: {
    id: string;
    value: string;
    unit: string;
    label: string;
    detail: string;
    icon?: string;
  }[];
  ctaLinks: {
    label: string;
    href: string;
    icon: string;
  }[];
}

const { name, headline, tagline, location, impactStats, ctaLinks } = Astro.props;

const iconPaths: Record<string, string> = {
