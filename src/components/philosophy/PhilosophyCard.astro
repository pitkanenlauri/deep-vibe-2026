---
interface Props {
  id: string;
  title: string;
  belief: string;
  source?: {
    author: string;
    work: string;
  };
}

const { id, title, belief, source } = Astro.props;
---

<article class="philosophy-card" data-philosophy-id={id}>
  <h3 class="text-title text-primary-600 mb-3">{title}</h3>
  <blockquote class="philosophy-quote">
    <p class="text-body">{belief}</p>
    {source && (
      <footer class="philosophy-source text-small text-muted mt-3">
        â€” {source.author}, <cite>{source.work}</cite>
      </footer>
    )}
  </blockquote>
</article>

<style>
  .philosophy-card {
    background-color: white;
    padding: 1.5rem;
    border-radius: 0.75rem;
    border: 1px solid var(--color-gray-200);
    box-shadow: 0 1px 2px 0 rgb(0 0 0 / 0.05);
    transition:
      transform var(--duration-normal) cubic-bezier(0.34, 1.56, 0.64, 1),
      box-shadow var(--duration-normal) ease-out,
      border-color var(--duration-fast) ease-out;
  }

  .philosophy-card:hover {
    transform: translateY(-4px);
    border-color: var(--color-primary-200);
    box-shadow:
      0 8px 24px rgba(37, 99, 235, 0.1),
      0 4px 8px rgba(0, 0, 0, 0.04);
  }

  .philosophy-quote {
    padding-left: 1rem;
    border-left: 3px solid var(--color-primary-500);
    transition: border-color var(--duration-normal) ease-out;
  }

  .philosophy-card:hover .philosophy-quote {
    border-left-color: var(--color-purple-500);
  }

  .philosophy-quote p {
    font-style: italic;
    color: var(--color-gray-700);
  }

  .philosophy-source cite {
    font-style: normal;
  }

  @media (prefers-reduced-motion: reduce) {
    .philosophy-card {
      transition: none;
    }
    .philosophy-card:hover {
      transform: none;
    }
  }
</style>
