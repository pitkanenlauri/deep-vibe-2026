---
import '../styles/global.css';
import PhilosophyCard from '../components/philosophy/PhilosophyCard.astro';
import profileData from '../data/profile.json';
import SkillsChart from '../components/skills/SkillsChart';

const { hero, highlight, skills, philosophy, roots } = profileData;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{hero.name} | {hero.headline}</title>
		<meta name="description" content={hero.tagline} />
	</head>
	<body class="min-h-screen bg-gray-50">
		<main class="max-w-4xl mx-auto px-4 py-16">
			<!-- Hero Section Placeholder -->
			<section class="mb-16">
				<h1 class="text-display text-gray-900">{hero.name}</h1>
				<p class="text-headline text-gray-600 mt-2">{hero.headline}</p>
				<p class="text-body text-muted mt-4">{hero.tagline}</p>
			</section>

			<!-- Highlight Section Placeholder -->
			<section class="mb-16 p-6 bg-white rounded-lg shadow-sm border border-gray-200">
				<h2 class="text-title text-primary-600">{highlight.title}</h2>
				<p class="text-small text-muted mt-1">{highlight.category} &middot; {highlight.context}</p>
				<p class="text-body mt-3">{highlight.description}</p>
			</section>

			<!-- Skills Section -->
			<section class="mb-16">
				<h2 class="text-headline text-gray-900 mb-8">Skills & Expertise</h2>
				<SkillsChart client:idle skills={skills} />
			</section>

			<!-- Philosophy Section -->
			<section class="mb-16">
				<h2 class="text-headline text-gray-900 mb-6">Philosophy</h2>
				<div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
					{philosophy.map((item) => (
						<PhilosophyCard
							id={item.id}
							title={item.title}
							belief={item.belief}
							source={item.source}
						/>
					))}
				</div>
			</section>

			<!-- Roots Section -->
			<section class="mb-16 roots-section">
				<h2 class="text-headline text-gray-900 mb-6">Roots</h2>
				<div class="bg-white p-6 rounded-lg border border-gray-200 shadow-sm">
					<div class="roots-header mb-4">
						<p class="text-title text-gray-900">
							{roots.degree}
						</p>
						<p class="text-body text-muted">
							{roots.institution} Â· {roots.focus}
						</p>
					</div>
					<blockquote class="roots-insight">
						<p class="text-body">{roots.transferableInsight}</p>
					</blockquote>
				</div>
			</section>
		</main>
	</body>
</html>
